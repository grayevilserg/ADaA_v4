<Application
    x:Class="Domain_action_app_v4.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Domain_action_app_v4">

    <Application.Resources>
        <Style TargetType="Button" x:Key="DoITButton" >
            <Setter Property="Content" Value="Just do it"/>
            <Setter Property="Margin" Value="10" />
            <Setter Property="Width" Value="100"/>
        </Style>
        <Style TargetType="Button" x:Key="OtherButton">
            <Setter Property="Margin" Value="10" />
        </Style>
        <Style TargetType="TextBox" x:Key ="TBoxStyle">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Application.Resources>
    
</Application>
